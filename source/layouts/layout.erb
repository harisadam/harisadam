<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title %></title>
    <meta name="description" content="<%= current_page.data.description %>">

    <!-- FB meta -->
    <meta property="og:title" content="Haris Ádám - Ruby on Rails Developer, Ember.js Developer, Entrepreneur">
    <meta property="og:site_name" content="Haris Ádám - Ruby on Rails Developer, Ember.js Developer, Entrepreneur">
    <meta property="og:url" content="http://harisadam.com">
    <meta property="og:description" content="Ruby on Rails Consulting, Ember.js Consulting, Elixir Consulting">
    <meta property="og:type" content="website">
    <meta property="og:image" content="http://harisadam.com/images/a.jpg" />


    <!-- Twitter meta -->
    <meta name="twitter:card" content="person">
    <meta name="twitter:site" content="harisadam">
    <meta name="twitter:title" content="Haris Ádám - Ruby on Rails Developer, Ember.js Developer, Entrepreneur">
    <meta name="twitter:description" content="Ruby on Rails Consulting, Ember.js Consulting, Elixir Consulting">
    <meta name="twitter:image:src" content="http://harisadam.com/images/a.jpg">

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <%= stylesheet_link_tag "normalize", "bootstrap.min.css", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>
    <%= partial 'analytics' %>
  </body>
</html>
